<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:XSunriseSunset.ViewModels"
             x:Class="XSunriseSunset.SunriseSunset"
             Title="Sunrise Sunset">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:SunriseSunsetViewModel x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnDeleteCity" Text="Delete City" Command="{Binding Source={StaticResource vm}, Path=DeleteCityCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        
        <StackLayout BindingContext="{StaticResource vm}">
            <Label Text="{Binding SunriseLocation}" FontSize="Title" Padding="10, 20, 0, 10"/>
            <Label Text="{Binding SunriseDateTime}" FontSize="Medium" Padding="10, 0, 0, 0"/>
            <Label Text="{Binding SunsetDateTime}" FontSize="Medium" Padding="10, 0, 0, 0"/>
            <Label Text="{Binding DayLength}" FontSize="Medium" Padding="10, 0, 0, 0"/>
            <Label Text="{Binding TwilightStart}" FontSize="Medium" Padding="10, 0, 0, 0"/>
            <Label Text="{Binding TwilightEnd}" FontSize="Medium" Padding="10, 0, 0, 0"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>