<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:XSunriseSunset.ViewModels"
             x:Class="XSunriseSunset.AddCity">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:AddCityViewModel x:Key="vm" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout BindingContext="{StaticResource vm}">
            <Entry Text="{Binding CityName}" Placeholder="City Name" Keyboard="Default"></Entry>
            <Picker ItemsSource="{Binding States}" SelectedItem="{Binding State}" Title="State" HorizontalOptions="FillAndExpand" />
            <Picker SelectedItem="{Binding Country}" Title="Country" HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>United States US</x:String>
                </Picker.Items>
            </Picker>
            <Button Command="{Binding SubmitCommand}" Text="Enter"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>