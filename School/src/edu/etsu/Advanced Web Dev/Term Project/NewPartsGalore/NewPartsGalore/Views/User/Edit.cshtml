@model NewPartsGalore.Models.Entities.User

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content-wrapper {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 15px;
            padding: 55px;
        }

        /* Style the table */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #333;
        }

            .table th,
            .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                background-color: #f8f9fa; /* Header background color */
            }

            /* Alternating row colors */
            .table tbody tr:nth-of-type(odd) {
                background-color: rgba(0, 0, 0, 0.05); /* Light gray background */
            }

            /* Hover effect on rows */
            .table tbody tr:hover {
                background-color: rgba(0, 0, 0, 0.075); /* Slightly darker background on hover */
            }

            /* Action links style */
            .table a {
                color: #007bff; /* Bootstrap primary link color */
                text-decoration: none;
            }

                .table a:hover {
                    text-decoration: underline;
                }

        .container {
            display: flex;
        }

        .left-column {
            flex: 1;
            text-align: left;
            vertical-align: bottom;
        }

        .right-column {
            flex: 1;
            vertical-align: bottom;
            text-align: right;
        }

    </style>

</head>
<div class="content-wrapper">
    <h1 id="userHeading">User</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" id="formUserEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" readonly class="form-control" id="Id" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" id="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" id="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" id="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" id="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <button class="btn btn-primary">
            <a style="text-decoration: none; color: white" asp-action="Index">Back to List</a>
        </button>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/userEdit.js" type="module" defer></script>
}
