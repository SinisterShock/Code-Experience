@model NewPartsGalore.Models.Entities.User

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content-wrapper {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 15px;
            padding: 55px;
        }

        /* Style the table */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #333;
        }

            .table th,
            .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                background-color: #f8f9fa; /* Header background color */
            }

            /* Alternating row colors */
            .table tbody tr:nth-of-type(odd) {
                background-color: rgba(0, 0, 0, 0.05); /* Light gray background */
            }

            /* Hover effect on rows */
            .table tbody tr:hover {
                background-color: rgba(0, 0, 0, 0.075); /* Slightly darker background on hover */
            }

            /* Action links style */
            .table a {
                color: #007bff; /* Bootstrap primary link color */
                text-decoration: none;
            }

                .table a:hover {
                    text-decoration: underline;
                }

        .container {
            display: flex;
        }

        .left-column {
            flex: 1;
            text-align: left;
            vertical-align: bottom;
        }

        .right-column {
            flex: 1;
            vertical-align: bottom;
            text-align: right;
        }

    </style>

</head>
<div class="content-wrapper">
    <div>
        <h4 id="userHeading">User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10" id="Id">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10" id="Title">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10" id="FirstName">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10" id="LastName">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10" id="Email">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete" id="formUserDelete">
            <input type="hidden" asp-for="Id" id="id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a style="text-decoration: none; color: white" class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/userDelete.js" type="module" defer></script>
}
